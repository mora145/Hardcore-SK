	<TraitDef>
		<defName>LazyEye</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>lazyeye'd</label>
				<description>{PAWN_nameDef} has a rather unfortunate disability for being on a RimWorld. {PAWN_pronoun} has a lazy-eye, making hitting anything much harder</description>
				<statOffsets>
					<WorkSpeedGlobal>-.05</WorkSpeedGlobal>
					<ShootingAccuracyPawn>-0.30</ShootingAccuracyPawn>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Marksman</li>
			<li>Reaver</li>
		</conflictingTraits>
	</TraitDef> 

	<TraitDef>
		<defName>Marksman</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>marksman</label>
				<description>{PAWN_nameDef} has displayed a natural affinity for ranged weapons and abhors close quarters combat.</description>
				<statFactors>
					<MeleeHitChance>0.80</MeleeHitChance>
				</statFactors>
				<statOffsets>
					<AimingDelayFactor>-0.20</AimingDelayFactor>
					<ShootingAccuracyPawn>0.20</ShootingAccuracyPawn>
				</statOffsets>
				<skillGains>
					<li>
						<key>Melee</key>
						<value>-6</value>
					</li>
					<li>
						<key>Shooting</key>
						<value>6</value>
					</li>
				</skillGains>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Reaver</li>
			<li>Psychopath</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</TraitDef>
	
	<TraitDef>
		<defName>Fat</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>fat</label>
				<description>{PAWN_nameDef} hates exercise, and despite the fact that {PAWN_pronoun} eats as much as a normal person, {PAWN_possessive} sedentary lifestyle has made {PAWN_objective} exceptionally fat.</description>
				<statOffsets>
					<MoveSpeed>-0.3</MoveSpeed>
				</statOffsets>
				<skillGains>
					<li>
						<key>Melee</key>
						<value>-4</value>
					</li>
				</skillGains>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Fit</li>
			<li>SpeedOffset</li>
			<li>Fast</li>
		</conflictingTraits>
	</TraitDef>   

	<TraitDef>
		<defName>Fit</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>fit</label>
				<description>{PAWN_nameDef} loves exercise, and {PAWN_possessive} time spent conditioning {PAWN_possessive} body has paid off.</description>
				<statOffsets>
					<MoveSpeed>0.3</MoveSpeed>
				</statOffsets>
				<skillGains>
					<li>
						<key>Melee</key>
						<value>4</value>
					</li>
				</skillGains>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Fat</li>
		</conflictingTraits>
	</TraitDef>
	
