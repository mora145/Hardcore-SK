<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TraitDef>
		<defName>Efficient</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>efficient worker</label>
				<description>{PAWN_nameDef} is a highly efficient worker, resulting in increased productivity.</description>
				<statOffsets>
					<WorkSpeedGlobal>0.30</WorkSpeedGlobal>
					<ButcheryMechanoidEfficiency>0.1</ButcheryMechanoidEfficiency>
					<ButcheryMechanoidSpeed>0.1</ButcheryMechanoidSpeed>
					<ConstructSuccessChance>0.1</ConstructSuccessChance>
					<FixBrokenDownBuildingSuccessChance>0.1</FixBrokenDownBuildingSuccessChance>
				</statOffsets>
				<skillGains>
					<li><key>Construction</key><value>2</value></li>
					<li><key>Crafting</key><value>2</value></li>
				</skillGains>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Focused</li>
			<li>Aptitude</li>
			<!-- <li>GreenThumb</li> -->
			<li>Industriousness</li>
			<li>BrownThumb</li>
			<li>DIY</li>
			<li>Butcher</li>
			<li>Chemist</li>
			<li>Claustrophobic</li>
			<li>Gourmet</li>
			<li>Inventor</li>
			<li>Perfectionist</li>
			<li>Rockhound</li>
			<li>Nimble</li>
			<li>Efficient</li>
			<li>Slacker</li>
			<li>Forgetful</li>
		</conflictingTraits>
	</TraitDef>

	<!--error!-->
	<TraitDef>
		<defName>Slacker</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>slacker</label>
				<description>{PAWN_nameDef} is a slacker and spends as little time as possible working.</description>
