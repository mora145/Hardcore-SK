<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>MakeHerbMedicine</defName>
		<label>craft herbal medicine</label>
		<description>Crafts herbal medicine from Raw Healroot. Produces 1.</description>
		<jobString>Crafting herbal medicine.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Chemlab_Herbal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Ash</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<HerbMedicine>1</HerbMedicine>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineHerbal</li>
				<li>Ash</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Medicine>5</Medicine>
		</skillRequirements>
		<workSkill>Medicine</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>

