  <!--=================== Campfire meal ===============-->
  
  <RecipeDef>
    <defName>GrillFishCampfire</defName>
    <label>grill fish</label>
    <description>Grills a fish so it can be eaten. Tasty and crunchy!</description>
    <jobString>Grilling fish.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>700</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <MealFine>1</MealFine>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_ThingDefFishBlueblade</li>
        <li>Corpse_ThingDefFishSeasnake</li>
      </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>Campfire</li>
	  <li>FueledStove</li>
	  <li>TableGrill</li>
    </recipeUsers>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

</Defs>