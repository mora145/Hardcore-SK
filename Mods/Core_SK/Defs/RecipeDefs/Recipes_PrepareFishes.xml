<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=================== Aquaculture basin breeding ===============-->
  
  <RecipeDef>
    <defName>SupplyMashgonEggs</defName>
    <label>supply mashgon eggs</label>
    <description>Supply some eggs of a mashgon to breed. You only need to do it when there is no fish in the basin or if you want to change the bred species.</description>
    <jobString>Supplying mashgon eggs.</jobString>
    <workAmount>200</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Meat_ThingDefFishMashgon</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Meat_ThingDefFishMashgon</li>
      </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <products>
      <Meat_ThingDefFishMashgon>1</Meat_ThingDefFishMashgon>
    </products>
  </RecipeDef>

