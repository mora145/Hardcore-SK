<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<HediffDef Name="addedPartPropsBaseBasicPstcs" Abstract="True">
		<hediffClass>Hediff_AddedPart</hediffClass>
		<isBad>false</isBad>
		<defaultLabelColor>(148,117,14)</defaultLabelColor>
		<addedPartProps>
			<betterThanNatural>false</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<!-- Added body parts -->

	<HediffDef ParentName="addedPartPropsBaseBasicPstcs">
		<defName>EyePatch</defName>
		<label>eye patch</label>
		<labelNoun>an eye patch</labelNoun>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.0</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<spawnThingOnRemoved>EyePatch</spawnThingOnRemoved>
	</HediffDef>


