<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ApparelIndustrialBase">
		<defName>Apparel_TacVest</defName>
		<label>Loadbearing Kit</label>
		<thingClass>CombatExtended.Apparel_VisibleAccessory</thingClass>
		<description>A loadbearing vest with a number of pouches to store magazines and other equipment.\n\nSpeeds up reloading but is quite bulky to wear.</description>
		<graphicData>
			<texPath>Things/Apparel/TacRigging/TacRigging</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>8000</WorkToMake>
			<Mass>2</Mass>
			<Bulk>10</Bulk>
			<WornBulk>8</WornBulk>
			<EquipDelay>4.8</EquipDelay>			
			<StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<CarryBulk>30</CarryBulk>
			<ReloadSpeed>0.1</ReloadSpeed>
			<MoveSpeed>-0.06</MoveSpeed>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
			<AimingDelayFactor>-0.1</AimingDelayFactor>
		</equippedStatOffsets>
		<stuffCategories>
			<li>HF</li>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>55</costStuffCount>
		<costList>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
			<tags>
				<li>Outlander</li>
				<li>Military</li>
				<li>OrionLight</li>
				<li>OrionMedium</li>
				<li>OrionScout</li>
				<li>BrotherhoodLight</li>
				<li>BrotherhoodMedium</li>
				<li>BrotherhoodScout</li>
				<li>SectarianScout</li>
				<li>SectarianLight</li>
				<li>SectarianMedium</li>
				<li>SyndicateLight</li>
				<li>SyndicateMedium</li>
				<li>SyndicateScout</li>
				<li>SyndicateMedium</li>
				<li>AsariCommando</li>
				<li>AsariPowerArmor</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.33,0.33,0.33,1)</only>
				</li>
			</options>
		</colorGenerator>
		<thingCategories>
			<li>SpecialApparelCat</li>
		</thingCategories>
		<modExtensions>
			<li Class="CombatExtended.VisibleAccessoryDefExtension">
				<order>1</order>
			</li>
		</modExtensions>
	</ThingDef>

