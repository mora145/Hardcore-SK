		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Apparel/Mining/MiningHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>55</MaxHitPoints>
			<Flammability>1</Flammability>
			<ArmorRating_Heat>0.8</ArmorRating_Heat>
			<Mass>1</Mass>
			<Bulk>3</Bulk>
			<WornBulk>0</WornBulk>
			<EquipDelay>1.7</EquipDelay>			
			<Insulation_Heat>2.5</Insulation_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.08</MoveSpeed>
			<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
			<GlobalLearningFactor>0.02</GlobalLearningFactor>
			<NegotiationAbility>0.05</NegotiationAbility>
			<TradePriceImprovement>0.06</TradePriceImprovement>
			<MiningSpeed>0.20</MiningSpeed>
		</equippedStatOffsets>
		<generateCommonality>0.01</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Mining/MiningHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<defaultOutfitTags>
				<li>Miner</li>
			</defaultOutfitTags>
			<careIfWornByCorpse>false</careIfWornByCorpse>
		</apparel>
		<thingCategories>
			<li>SpecialHelmetsCat</li>
			<li>SetMiner</li>
		</thingCategories>
	</ThingDef>

