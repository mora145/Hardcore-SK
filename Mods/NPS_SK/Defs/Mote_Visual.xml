<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=================== Visual - Heat ==================-->
  
    <ThingDef>
    <defName>HeatWaver</defName>
	<label>heat</label>
	  <thingClass>Thing</thingClass>
    <graphicData>
      <texPath>NPS/Temperature/HeatWaver</texPath>
       <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>MoteGlow</shaderType>
    </graphicData>
    <altitudeLayer>MoteLow</altitudeLayer>
  </ThingDef>

  <ThingDef ParentName="MoteBase">
    <defName>Frost</defName>
    <graphicData>
      <texPath>NPS/Temperature/Frost</texPath>
      <shaderType>MoteGlow</shaderType>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
      <fadeInTime>2.0</fadeInTime>
      <solidTime>3.0</solidTime>
      <fadeOutTime>3.5</fadeOutTime>
    </mote>
  </ThingDef>
  
   <ThingDef>
    <defName>IceOverlay</defName>
	<label>Frost</label>
	  <thingClass>Thing</thingClass>
    <graphicData>
      <texPath>NPS/Temperature/Ice</texPath>
       <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>MoteLow</altitudeLayer>
  </ThingDef>

    <ThingDef ParentName="MoteBase">
    <defName>Mote_ColdBreath</defName>
	<thingClass>MoteThrownAttached</thingClass>
    <graphicData>
      <texPath>Things/Mote/AirPuff</texPath>
    </graphicData>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <mote>
      <fadeInTime>0.5</fadeInTime>
      <solidTime>3.2</solidTime>
      <fadeOutTime>1.4</fadeOutTime>
      <attachedDrawOffset>(0.45, 0, 0.45)</attachedDrawOffset>
	</mote>
  </ThingDef>
	
    <ThingDef>
    <defName>RainOverlay</defName>
	<label>Rain Splatter</label>
	  <thingClass>Thing</thingClass>
    <graphicData>
      <texPath>NPS/Weather/RainSplatter</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <flipExtraRotation>80</flipExtraRotation>
	   <shaderType>Transparent</shaderType>
    </graphicData>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
  </ThingDef>

</Defs>