<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>GuestBedCount</defName>
    <workerClass>Hospitality.ThoughtWorker_Beds</workerClass>
    <nullifyingTraits>
      <li>Masochist</li>
      <li>Ascetic</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>no guest beds</label>
        <description>They don't even have beds here.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
      <li>
        <label>not enough guest beds</label>
        <description>There should be more beds for guests.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
      <li>
        <label>enough beds</label>
        <description>There are enough beds in our room for all of us.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
      <li>
        <label>lots of beds</label>
        <description>Wow, so many beds!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


</Defs>